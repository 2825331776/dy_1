        <ImageView
            android:id="@+id/iv_preview_back_pdf"
            android:layout_width="@dimen/dimen_42dp"
            android:layout_height="@dimen/dimen_42dp"
            android:padding="@dimen/dimen_10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_easy_photos" />

        <View
            android:id="@+id/m_back_line_pdf"
            android:layout_width="1dp"
            android:layout_height="@dimen/dimen_20dp"
            android:background="@color/easy_photos_bar_primary_dark"
            app:layout_constraintBottom_toBottomOf="@+id/iv_preview_back_pdf"
            app:layout_constraintLeft_toRightOf="@+id/iv_preview_back_pdf"
            app:layout_constraintTop_toTopOf="@id/iv_preview_back_pdf" />

        <TextView
            android:id="@+id/tv_title_pdf"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="title"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/iv_preview_back_pdf"
            app:layout_constraintLeft_toRightOf="@id/m_back_line_pdf"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_preview_back_pdf" />

        <View
            android:id="@+id/m_back_line_top"
            android:layout_width="0dp"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/easy_photos_bar_primary_dark"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title_pdf" />

        <es.voghdev.pdfviewpager.library.PDFViewPager
            android:id="@+id/pdfViewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/m_back_line_top"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!--        <androidx.recyclerview.widget.RecyclerView-->
