<!--        联系我们-->
        <TextView
            android:id="@+id/tv_contactus"
            android:text="@string/contactUs"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/dimen_16sp"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            app:layout_constraintLeft_toLeftOf="@id/tv_website"
            app:layout_constraintTop_toBottomOf="@id/tv_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_contactus_email"
            android:text="@string/ContactEmail"
            android:textColor="@color/white"
            android:textIsSelectable="true"
            android:textAllCaps="false"
            android:autoLink="email"
            android:textColorLink="@color/white"
            android:textSize="@dimen/dimen_16sp"
            android:layout_marginStart="@dimen/dimen_5dp"
            app:layout_constraintLeft_toRightOf="@id/tv_contactus"
            app:layout_constraintTop_toTopOf="@id/tv_contactus"
            app:layout_constraintBottom_toBottomOf="@id/tv_contactus"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
<!--        隐私条款 链接-->
        <TextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/tv_company_name"
            app:layout_constraintTop_toBottomOf="@id/tv_contactus"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:textSize="@dimen/dimen_16sp"
            android:text="@string/pop_about_privacy_policy"
            android:autoLink="web"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_bottom"
            app:layout_constraintLeft_toLeftOf="@id/tv_company_name"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy_policy"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

