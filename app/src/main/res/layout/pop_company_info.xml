<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_150dp"
        android:background="@drawable/bg_main_preview_setting_pop">

        <!--标题导航线-->
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_setting_title"
            android:layout_width="@dimen/dimen_5dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="@dimen/dimen_20dp" />

        <TextView
            android:id="@+id/tv_company_name"
            android:text="@string/CompanyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/dimen_20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/gl_setting_title"/>

        <TextView
            android:id="@+id/tv_company_website"
            android:text="@string/CompanyWebsite"
            app:layout_constraintLeft_toLeftOf="@id/tv_company_name"
            android:layout_marginTop="@dimen/dimen_5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_company_name"
            android:textColor="@color/white"
            android:autoLink="web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_version_name_info"
            app:layout_constraintTop_toBottomOf="@id/tv_company_website"
            app:layout_constraintStart_toStartOf="@id/tv_company_name"
            android:text="@string/VersionName"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_version_name"
            android:layout_marginLeft="@dimen/dimen_10dp"
            app:layout_constraintTop_toTopOf="@id/tv_version_name_info"
            app:layout_constraintBottom_toBottomOf="@id/tv_version_name_info"
            app:layout_constraintLeft_toRightOf="@id/tv_version_name_info"
            android:text="0.0.0"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_check_version"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_marginBottom="@dimen/dimen_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_version_name_info"
            app:layout_constraintLeft_toLeftOf="@id/tv_version_name_info"
            android:text="@string/CheckLatestVersion"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>