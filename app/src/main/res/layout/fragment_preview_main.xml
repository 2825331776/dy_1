                    android:maxWidth="@dimen/dimen_40dp"
                    android:onClick="@{pf::toImage}"
                    android:button="@null"
                    android:background="@drawable/selector_main_preview_takephoto"/>

                <CheckBox
                    android:id="@+id/iv_preview_left_record"
