<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="pf"
            type="com.dyt.wcc.dytpir.ui.preview.PreviewFragment" />

        <variable
            name="previewViewModel"
            type="com.dyt.wcc.dytpir.ui.preview.PreViewViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--左侧按钮布局-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rl_left_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fl_preview"
            android:layout_width="@dimen/dimen_65dp"
            android:gravity="center"
            android:background="@color/bg_preview_right"
            android:layout_height="match_parent">
<!--            分隔线-->
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="1dp"
                android:background="@color/bg_preview_left_cutoff_rule"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

<!--        左侧按钮-->
<!--            android:onClick="@{previewViewModel::showPaletteWindow}"-->


            <!--      设置-->
            <CheckBox
                android:id="@+id/iv_preview_right_setting"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_margin="@dimen/dimen_10dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/selector_main_preview_setting"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:button="@null"
                tools:ignore="ContentDescription" />
<!--            公司信息-->
            <CheckBox
                android:id="@+id/iv_preview_left_company_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_preview_right_setting"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_margin="@dimen/dimen_5dp"
                android:background="@drawable/selector_main_preview_aboutus"
                android:button="@null"
                android:layout_centerInParent="true"/>
