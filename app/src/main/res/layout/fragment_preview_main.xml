                    android:layout_height="@dimen/dimen_40dp"
                    android:maxWidth="@dimen/dimen_40dp"
                    android:background="@drawable/selector_main_preview_gallery"
                    android:button="@null"
                    android:onClick="@{pf::toGallery}"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
<!--视频预览页面布局-->
        <FrameLayout
