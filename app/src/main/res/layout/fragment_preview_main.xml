<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="pf"
            type="com.dyt.wcc.dytpir.ui.preview.PreviewFragment" />

        <variable
            name="previewViewModel"
            type="com.dyt.wcc.dytpir.ui.preview.PreViewViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--左侧按钮布局-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rl_left_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fl_preview"
            android:layout_width="@dimen/dimen_65dp"
            android:gravity="center"
            android:background="@color/bg_preview_right"
            android:layout_height="match_parent">
<!--            分隔线-->
            <TextView
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="1dp"
                android:background="@color/bg_preview_left_cutoff_rule"
                android:layout_width="1px"
                android:layout_height="match_parent"/>

<!--        左侧按钮-->
            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/iv_preview_left_clear"
                android:id="@+id/iv_preview_left_palette"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@drawable/ic_user_vector_palette_24px"
                android:onClick="@{previewViewModel::showPaletteWindow}"
                tools:ignore="ContentDescription" />

            <ImageView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_preview_left_palette"
                android:id="@+id/iv_preview_left_clear"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="@dimen/dimen_40dp"
                android:layout_margin="@dimen/dimen_5dp"
                android:background="@mipmap/delete_all"
                android:onClick="@{pf::toClear}"
                tools:ignore="ContentDescription"/>

<!--            公司信息-->
            <ImageView
                android:id="@+id/iv_preview_left_company_info"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_margin="@dimen/dimen_5dp"
                android:background="@mipmap/left_container_company_info"
                android:layout_centerInParent="true"/>

            <LinearLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_preview_left_company_info"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginBottom="@dimen/dimen_2dp"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/iv_preview_left_takePhoto"
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="@dimen/dimen_0dp"
                    android:maxWidth="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_user_vector_take_photo_24px"/>

                <ImageView
                    android:id="@+id/iv_preview_left_record"
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="@dimen/dimen_0dp"
                    android:maxWidth="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_user_vector_record_24px"/>

                <ImageButton
                    android:id="@+id/iv_preview_left_gallery"
                    android:layout_width="@dimen/dimen_50dp"
                    android:layout_height="@dimen/dimen_0dp"
                    android:maxWidth="@dimen/dimen_50dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_user_vector_gallery_24px"
                    android:onClick="@{pf::toGallery}"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
<!--视频预览页面布局-->
        <FrameLayout
            android:id="@+id/fl_preview"
            app:layout_constraintLeft_toRightOf="@id/rl_left_container"
            app:layout_constraintRight_toLeftOf="@id/ll_container_preview_seekbar"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent">

<!--            <com.dyt.wcc.cameracommon.widget.UVCCameraTextureView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"/>-->


        </FrameLayout>

<!--        拖动条布局-->
        <LinearLayout
            android:id="@+id/ll_container_preview_seekbar"
            android:layout_height="match_parent"
            android:layout_width="@dimen/dimen_65dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/fl_preview"
            app:layout_constraintRight_toLeftOf="@id/rl_right_container"
            android:orientation="vertical"
            android:background="@color/bg_preview_right">
        </LinearLayout>

<!--        右侧按钮布局-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rl_right_container"
            app:layout_constraintLeft_toRightOf="@id/ll_container_preview_seekbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/dimen_75dp"
            android:layout_height="match_parent"
            android:background="@color/bg_preview_right">
<!--            分割线-->
            <TextView
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_alignParentStart="true"
                android:background="@color/bg_preview_left_cutoff_rule"
                android:layout_width="@dimen/dimen_1dp"
                android:layout_height="match_parent"/>

<!--        自定义右侧按钮-->
            <com.dyt.wcc.common.widget.MyToggleView
                android:id="@+id/toggle_show_high_low_temp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:layout_marginEnd="@dimen/dimen_6dp"
                android:layout_marginTop="@dimen/dimen_3dp"
                app:showTextContent="@string/ShowHighLowTemp"
                app:ColorTextUnselect="@color/white"
                app:showTextSize="14sp"/>

            <com.dyt.wcc.common.widget.MyToggleView
                android:id="@+id/toggle_area_check"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:layout_marginEnd="@dimen/dimen_6dp"
                android:layout_marginTop="@dimen/dimen_3dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toggle_show_high_low_temp"
                app:showTextContent="@string/AreaCheck"
                app:ColorTextUnselect="@color/white"
                app:showTextSize="14sp"/>

            <com.dyt.wcc.common.widget.MyToggleView
                android:id="@+id/toggle_high_temp_alarm"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toggle_area_check"
                app:layout_constraintBottom_toTopOf="@id/et_inputTemp_rightRL_container"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_marginStart="@dimen/dimen_6dp"
                android:layout_marginEnd="@dimen/dimen_6dp"
                android:layout_marginTop="@dimen/dimen_3dp"
                app:showTextContent="@string/HighTempAlarm"
                app:ColorTextUnselect="@color/white"
                app:showTextSize="14sp"/>

<!--        高温报警输入EditText-->
            <EditText
                android:id="@+id/et_inputTemp_rightRL_container"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/iv_togo"
                app:layout_constraintTop_toBottomOf="@id/toggle_high_temp_alarm"
                app:layout_constraintBottom_toTopOf="@id/toggle_fixed_tempBar"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="@dimen/dimen_30dp"
                android:maxHeight="@dimen/dimen_30dp"
                android:layout_marginStart="@dimen/dimen_4dp"
                android:layout_marginEnd="@dimen/dimen_4dp"
                android:textColorHint="@color/white"
                android:hint="@string/AlarmTempInput"
                android:background="@drawable/shape_bg_pop_setting_edit"
                android:inputType="number"
                android:maxLength="5"
                android:gravity="center"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:singleLine="true"/>

            <ImageView
                android:id="@+id/iv_togo"
                app:layout_constraintLeft_toRightOf="@id/et_inputTemp_rightRL_container"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/et_inputTemp_rightRL_container"
                app:layout_constraintBottom_toBottomOf="@id/et_inputTemp_rightRL_container"
                android:background="@drawable/ic_user_vector_confirm_24px"
                android:layout_width="@dimen/dimen_25dp"
                android:layout_height="@dimen/dimen_25dp"
                tools:ignore="ContentDescription"
                android:scaleType="fitXY"/>

<!--            固定温度条-->
            <com.dyt.wcc.common.widget.MyToggleView
                android:id="@+id/toggle_fixed_tempBar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_35dp"
                android:layout_margin="@dimen/dimen_6dp"
                app:showTextContent="@string/FixeTempBar"
                app:ColorTextUnselect="@color/white"
                app:showTextSize="14sp"/>

            <!--        右侧底部温度模式-->
            <LinearLayout
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toggle_fixed_tempBar"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="@dimen/dimen_5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:id="@+id/iv_preview_right_temp_mode"
                    android:background="@drawable/ic_user_vector_draw_temp_mode_24px"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_0dp"
                    android:maxWidth="@dimen/dimen_40dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dimen_5dp"
                    tools:ignore="ContentDescription" />
                <!--        右侧底部设置-->
                <ImageView
                    android:id="@+id/iv_preview_right_setting"
                    android:background="@drawable/ic_user_vector_setting_new_24px"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_0dp"
                    android:maxWidth="@dimen/dimen_40dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dimen_5dp"
                    tools:ignore="ContentDescription" />
                <!--        右侧底部图表-->
                <ImageView
                    android:id="@+id/iv_preview_right_chart"
                    android:background="@mipmap/right_container_chart_info"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_0dp"
                    android:maxWidth="@dimen/dimen_40dp"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dimen_5dp"
                    tools:ignore="ContentDescription"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>