<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="pf"
            type="com.dyt.wcc.dytpir.ui.preview.PreviewFragment" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



<!--左侧按钮布局-->
        <RelativeLayout
            android:id="@+id/rl_left_container"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fl_preview"
            android:layout_width="80dp"
            android:background="@color/bg_preview_right"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginEnd="3dp"
                android:layout_alignParentEnd="true"
                android:background="@color/bg_preview_left_cutoff_rule"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>
            <TextView
                android:layout_marginEnd="9dp"
                android:layout_alignParentEnd="true"
                android:background="@color/bg_preview_left_cutoff_rule"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/iv_preview_left_palette"
                android:layout_margin="5dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_user_vector_palette_24px"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

            <ImageView
                android:id="@+id/iv_preview_left_clear"
                android:layout_below="@id/iv_preview_left_palette"
                android:src="@drawable/ic_user_vector_clear_24px"
                android:layout_centerHorizontal="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/iv_preview_left_info"
                android:src="@drawable/ic_user_vector_palette_24px"
                android:layout_centerInParent="true"
                android:layout_width="48dp"
                android:layout_height="48dp"/>

            <ImageView
                android:id="@+id/iv_preview_left_takePhoto"
                android:layout_above="@id/iv_preview_left_record"
                android:src="@drawable/ic_user_vector_take_photo_24px"
                android:layout_centerHorizontal="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/iv_preview_left_record"
                android:layout_above="@id/iv_preview_left_gallery"
                android:src="@drawable/ic_user_vector_record_24px"
                android:layout_centerHorizontal="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/iv_preview_left_gallery"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_user_vector_gallery_24px"
                android:layout_centerHorizontal="true"
                android:onClick="@{pf.toGallery}"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"/>


        </RelativeLayout>
<!--视频预览页面布局-->
        <FrameLayout
            android:id="@+id/fl_preview"
            app:layout_constraintLeft_toRightOf="@id/rl_left_container"
            app:layout_constraintRight_toLeftOf="@id/ll_container_preview_seekbar"
            android:layout_width="0dp"
            android:layout_height="match_parent">
        </FrameLayout>

<!--        拖动条布局-->
        <LinearLayout
            android:id="@+id/ll_container_preview_seekbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/fl_preview"
            app:layout_constraintRight_toLeftOf="@id/rl_right_container"
            android:layout_width="80dp"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:background="@color/bg_preview_right">

        </LinearLayout>

<!--        右侧按钮布局-->
        <RelativeLayout
            android:id="@+id/rl_right_container"
            app:layout_constraintLeft_toRightOf="@id/ll_container_preview_seekbar"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/bg_preview_right">

            <TextView
                android:layout_alignParentStart="true"
                android:background="@color/bg_preview_left_cutoff_rule"
                android:layout_width="1dp"
                android:layout_height="match_parent"/>

            <ImageView
                android:id="@+id/iv_preview_right_temp_mode"
                android:layout_above="@id/iv_preview_right_setting"
                android:src="@drawable/ic_user_vector_temp_mode_24px"
                android:layout_centerHorizontal="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/iv_preview_right_setting"
                android:layout_above="@id/iv_preview_right_chart"
                android:src="@drawable/ic_user_vector_setting_24px"
                android:layout_centerHorizontal="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"/>

            <ImageView
                android:id="@+id/iv_preview_right_chart"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_user_vector_gallery_24px"
                android:layout_centerHorizontal="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="5dp"/>

        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>