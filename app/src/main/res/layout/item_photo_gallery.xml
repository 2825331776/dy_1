<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_100dp"
    android:layout_gravity="center"
    android:id="@+id/cl_item_container"
    android:layout_margin="@dimen/dimen_2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_main_gallery_item_photo_gallery"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_main_gallery_item_video_length"
        app:layout_constraintLeft_toLeftOf="@id/iv_main_gallery_item_photo_gallery"
        app:layout_constraintBottom_toBottomOf="@id/iv_main_gallery_item_photo_gallery"
        android:layout_marginStart="@dimen/dimen_5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_main_gallery_item_check"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_30dp">
        <ImageView
            android:id="@+id/iv_main_gallery_item_check"
            android:background="@drawable/selector_main_gallery_item_checkbox"
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_main_gallery_item_playVideo"
        android:background="@mipmap/play"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>