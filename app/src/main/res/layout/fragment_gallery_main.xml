<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="FgGallery"
            type="com.dyt.wcc.dytpir.ui.gallry.GalleryFragment" />
    </data>

    <RelativeLayout
        android:background="@color/bg_preview_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            app:FgGallery ="@{FgGallery}"
            android:id="@+id/include_gallery"
            layout="@layout/gallery_actionbar"/>

        <TextView
            android:id="@+id/cutoff_rule_gallery"
            android:layout_below="@id/include_gallery"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:background="@color/bg_cutoff_rule"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_gallery"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/cutoff_rule_gallery"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/rl_gallery_right" />

        <RelativeLayout
            android:id="@+id/rl_gallery_right"
            android:layout_below="@id/cutoff_rule_gallery"
            android:layout_width="@dimen/dimen_150dp"
            android:layout_alignParentEnd="true"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_cutLine_rightRl"
                android:background="@color/bg_cutoff_rule"
                android:layout_width="@dimen/dimen_2dp"
                android:layout_height="match_parent"/>

            <LinearLayout
                android:id="@+id/ll_container_gallery_rightRL"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_180dp"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dimen_10dp">

                <Button
                    android:id="@+id/bt_all_gallery_rightRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_gallery_bt_radius"
                    android:text="@string/MediaBrowser_all" />

                <Button
                    android:id="@+id/bt_pic_gallery_rightRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_gallery_bt_radius"
                    android:text="@string/MediaBrowser_pic" />

                <Button
                    android:id="@+id/bt_video_gallery_rightRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_gallery_bt_radius"
                    android:text="@string/MediaBrowser_video" />

                <Button
                    android:id="@+id/bt_delete_gallery_rightRl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_0dp"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_main_gallery_bt_radius"
                    android:text="@string/MediaBrowser_delete" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_gallery_shared_rightRl_1"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_below="@id/ll_container_gallery_rightRL"
                android:layout_marginStart="@dimen/dimen_25dp"
                android:visibility="gone"
                android:src="@mipmap/appicon" />

            <ImageView
                android:id="@+id/iv_gallery_shared_rightRl_2"
                android:layout_width="@dimen/dimen_50dp"
                android:layout_height="@dimen/dimen_50dp"
                android:layout_below="@id/ll_container_gallery_rightRL"
                android:layout_toEndOf="@id/iv_gallery_shared_rightRl_1"
                android:visibility="gone"
                android:src="@mipmap/appicon" />

        </RelativeLayout>



    </RelativeLayout>
</layout>