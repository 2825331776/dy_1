<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="FgGallery"
            type="com.dyt.wcc.dytpir.ui.gallry.GalleryFragment" />
    </data>
<!-- android:background="@color/bg_preview_right"-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/bg_preview_right"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        Act-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_main_gallery_actionbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_40dp">
<!--            返回按钮-->
            <ImageView
                android:id="@+id/iv_back_gallery"
                android:src="@drawable/selector_main_gallery_iv_back"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/dimen_10dp"
                android:scaleType="fitXY"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp" />
<!--标题-->
            <TextView
                android:id="@+id/tv_tittle"
                android:text="@string/MediaBrowser"
                android:textColor="@color/white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
<!--工具栏-->
<!--            <ImageView-->
