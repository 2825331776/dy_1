            <Button
                android:id="@+id/bt_all_gallery_rightRl"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_marginEnd="@dimen/dimen_5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/bt_pic_gallery_rightRl"
                android:background="@drawable/selector_main_gallery_bt_all"/>

            <Button
                android:id="@+id/bt_pic_gallery_rightRl"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_marginEnd="@dimen/dimen_5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/bt_video_gallery_rightRl"
                android:background="@drawable/selector_main_gallery_bt_pic" />

            <Button
                android:id="@+id/bt_video_gallery_rightRl"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_marginEnd="@dimen/dimen_5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/bt_delete_gallery_rightRl"
                android:background="@drawable/selector_main_gallery_bt_video"/>

            <Button
                android:id="@+id/bt_delete_gallery_rightRl"
                android:layout_width="@dimen/dimen_30dp"
                android:layout_height="@dimen/dimen_30dp"
                android:layout_marginEnd="@dimen/dimen_10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@drawable/selector_main_gallery_bt_delete"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/cutoff_rule_gallery"
            app:layout_constraintTop_toBottomOf="@id/cl_main_gallery_actionbar"
            android:layout_below="@id/cl_main_gallery_actionbar"
            android:layout_marginTop="@dimen/dimen_2dp"
            android:background="@color/bg_cutoff_rule"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_gallery"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cutoff_rule_gallery"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="0dp"/>

