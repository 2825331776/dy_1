<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/bg_preview_right"
    android:layout_height="60dp">

    <ImageView
        android:padding="10dp"
        android:id="@+id/iv_back_gallery"
        android:src="@mipmap/back_arrow_left"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:layout_width="40dp"
        android:layout_height="20dp" />


    <TextView
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:id="@+id/tv_tittle"
        android:text="@string/MediaBrowser"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_more_gallery"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="10dp"
        android:src="@mipmap/more" />


    <TextView
        android:layout_alignParentBottom="true"
        android:background="@color/bg_cutoff_rule"
        android:layout_width="match_parent"
        android:layout_height="1px"/>
</RelativeLayout>