<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dimen_300dp"
        android:layout_height="@dimen/dimen_50dp"
        android:background="@drawable/shape_bg_pop_temp_mode_chioce">

        <ImageView
            android:id="@+id/iv_temp_mode_point"
            android:background="@mipmap/temp_mode_point_unselect"
            android:layout_width="@dimen/dimen_45dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_temp_mode_line"
            android:background="@mipmap/temp_mode_line_unselect"
            android:layout_width="@dimen/dimen_45dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            app:layout_constraintLeft_toRightOf="@id/iv_temp_mode_point"
            app:layout_constraintRight_toLeftOf="@id/iv_temp_mode_rectangle"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_temp_mode_rectangle"
            android:background="@mipmap/temp_mode_rectangle_unselect"
            android:layout_width="@dimen/dimen_45dp"
            android:layout_height="@dimen/dimen_50dp"
            android:layout_marginEnd="@dimen/dimen_10dp"
            android:layout_marginStart="@dimen/dimen_10dp"
            app:layout_constraintLeft_toRightOf="@id/iv_temp_mode_line"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>