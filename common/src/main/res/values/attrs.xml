<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ToggleView">
        <attr name="showTextEnable" format="boolean"/>
        <attr name="textSize" format="integer"/>
        <attr name="textColor" format="reference"/>
        <attr name="bg_select"  format="reference"/>
        <attr name="bg_unselect" format="reference"/>
        <attr name="button_pic" format="reference"/>

        <attr name="enterAnimate" format="reference"/>
        <attr name="exitAnimate" format="reference"/>
    </declare-styleable>

<!--    自定义三选一switchButton 样式-->
    <declare-styleable name="SwitchMultiButton">
        <attr name="strokeRadius" format="dimension" />
        <attr name="stroke_Width" format="dimension" />
        <attr name="text_Size" format="dimension" />
        <attr name="selectedTab" format="integer" />
        <attr name="selectedColor" format="color|reference" />
        <attr name="switchTabs" format="reference" />
        <attr name="typeface" format="string" />
        <attr name="disableColor" format="color|reference" />
    </declare-styleable>

</resources>