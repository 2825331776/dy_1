            <!--    右侧 图片涂鸦工具栏 布局-->
            <LinearLayout
                android:id="@+id/ll_palette_character_size_container"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="match_parent"
                android:gravity="top"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/ll_doodle_right_tools"
                app:layout_constraintTop_toTopOf="parent">

                <com.dyt.wcc.baselib.ui.widget.CircleDisplayView
                    android:id="@+id/circle_palette"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:padding="@dimen/dimen_2dp"
                    app:contentType="color"
                    app:default_borderColor="@color/white"
                    app:isSelect="true"
                    app:selected_border_StrokeWidth="2" />

                <com.dyt.wcc.baselib.ui.widget.CircleDisplayView
                    android:id="@+id/circle_character_size"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dimen_5dp"
                    android:padding="@dimen/dimen_2dp"
                    app:contentType="bitmap"
                    app:default_Bitmap="@mipmap/photo_detail_tools_size_2_select"
                    app:default_borderColor="@color/white"
                    app:selected_border_StrokeWidth="2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="@dimen/dimen_3dp"
                    android:layout_marginEnd="@dimen/dimen_3dp"
                    android:background="@color/white" />
                <!--            滑动条-->
                <com.dyt.wcc.baselib.ui.widget.ColorSliderView
                    android:id="@+id/edit_color_pick"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="match_parent"
                    app:indicator_percent="1"
                    app:slider_orientation="vertical" />
                <!--            画笔 粗细 选择器-->
                <com.dyt.wcc.baselib.ui.widget.PenpointDIASelectorView
                    android:id="@+id/paint_size_select"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    app:fontSizeEnd="80"
                    app:fontSizeStart="10"
                    app:itemCount="6"
                    app:marginTopBottom="10dp"
                    app:scrollOrientation="vertical" />


            </LinearLayout>

            <!--        分割线-->
            <View
                android:id="@+id/cut_line_seekbar_tools"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:layout_constraintLeft_toRightOf="@id/ll_palette_character_size_container"
                app:layout_constraintRight_toLeftOf="@id/ll_doodle_right_tools"
                app:layout_constraintTop_toTopOf="parent" />

            <!--    右侧 图片涂鸦工具栏 布局-->
            <LinearLayout
                android:id="@+id/ll_doodle_right_tools"
                android:layout_width="@dimen/dimen_40dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/iv_detail_tools_doodle"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10dp"
                    android:src="@drawable/selector_tools_doodle" />

                <ImageView
                    android:id="@+id/iv_detail_tools_character"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10dp"
                    android:src="@drawable/selector_tools_character" />


                <!--        第二版替换成 图片分析-->
                <ImageView
                    android:id="@+id/iv_detail_tools_analyse"
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10dp"
                    android:src="@drawable/selector_tools_analyse_all" />
                <!--        分割线 -->
            </LinearLayout>

