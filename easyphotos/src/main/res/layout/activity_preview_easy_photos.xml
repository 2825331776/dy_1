    <ImageView
        android:id="@+id/iv_preview_back"
        android:layout_width="@dimen/dimen_42dp"
        android:layout_height="@dimen/dimen_42dp"
        android:padding="@dimen/dimen_10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_arrow_back_easy_photos" />

    <View
        android:id="@+id/m_back_line"
        android:layout_width="@dimen/dimen_1dp"
        android:layout_height="@dimen/dimen_18dp"
        android:background="@color/easy_photos_bar_primary_dark"
        app:layout_constraintBottom_toBottomOf="@+id/iv_preview_back"
        app:layout_constraintLeft_toRightOf="@+id/iv_preview_back"
        app:layout_constraintTop_toTopOf="@id/iv_preview_back" />

    <com.huantansheng.easyphotos.ui.widget.PreviewRecyclerView
        android:id="@+id/rv_photos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_preview_back" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dimen_80dp"
        android:layout_height="@dimen/dimen_200dp"
        android:background="@drawable/bg_photo_detail_right_tools"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <SeekBar
            android:id="@+id/seekbar_tools"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/ll1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ll1"
            app:layout_constraintTop_toTopOf="@id/ll1" />


        <!--        分割线-->
        <View
            android:id="@+id/cut_line_seekbar_tools"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="@color/easy_photos_bar_primary_dark"
            app:layout_constraintLeft_toRightOf="@id/seekbar_tools"
            app:layout_constraintRight_toLeftOf="@id/ll1"
            app:layout_constraintTop_toTopOf="parent" />

        <!--    右侧 图片涂鸦工具栏 布局-->
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/ib_detail_tools_palette"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@null"
                android:contentDescription="tools_palette"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/photo_detail_tools_palette" />

            <ImageButton
                android:id="@+id/ib_detail_tools_character"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@null"
                android:contentDescription="tools_character"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/photo_detail_tools_character_red" />

            <ImageButton
                android:id="@+id/ib_detail_tools_doodle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@null"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/photo_detail_tools_doodle_pen" />

            <!--        第二版替换成 图片分析-->
            <ImageButton
                android:id="@+id/ib_detail_tools_analyse"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@null"
                android:contentDescription="character_size"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/photo_detail_tools_analyse" />

            <!--        分割线 -->
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


