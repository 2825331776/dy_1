                android:layout_height="@dimen/dimen_100dp"
                android:layout_centerInParent="true"
                android:padding="@dimen/dimen_20dp"
                android:visibility="gone"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_play_easy_photos_2" />



