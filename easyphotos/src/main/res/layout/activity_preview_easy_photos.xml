        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_top_parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_46dp"
            android:background="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--            正常情况的 状态栏-->
            <LinearLayout
                android:id="@+id/ll_actionbar_normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_preview_back"
                    android:layout_width="@dimen/dimen_42dp"
                    android:layout_height="@dimen/dimen_42dp"
                    android:padding="@dimen/dimen_10dp"
                    app:srcCompat="@drawable/ic_arrow_back_easy_photos" />

                <View
                    android:id="@+id/m_back_line"
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="@dimen/dimen_18dp"
                    android:background="@color/cardview_dark_background" />
            </LinearLayout>

            <!--            编辑时 状态栏 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_actionbar_gesture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_tools_exit"
                    android:layout_width="@dimen/dimen_42dp"
                    android:layout_height="@dimen/dimen_42dp"
                    android:padding="@dimen/dimen_10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_arrow_back_easy_photos" />

                <View
                    android:id="@+id/v_back_line_edit"
                    android:layout_width="@dimen/dimen_1dp"
                    android:layout_height="@dimen/dimen_18dp"
                    android:background="@color/album_item_count_easy_photos"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_tools_exit"
                    app:layout_constraintLeft_toRightOf="@+id/iv_tools_exit"
                    app:layout_constraintTop_toTopOf="@id/iv_tools_exit" />

                <!--        右侧工具栏-->
                <LinearLayout
                    android:id="@+id/ll_photo_detail_actionbar_right_tools"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/dimen_10dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_undo"
                        android:layout_width="@dimen/dimen_40dp"
                        android:layout_height="@dimen/dimen_40dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dimen_5dp"
                        android:padding="@dimen/dimen_10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_tools_undo" />

                    <ImageView
                        android:id="@+id/iv_do"
                        android:layout_width="@dimen/dimen_40dp"
                        android:layout_height="@dimen/dimen_40dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dimen_5dp"
                        android:padding="@dimen/dimen_10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_tools_do" />

                    <ImageView
                        android:id="@+id/iv_save_photo"
                        android:layout_width="@dimen/dimen_40dp"
                        android:layout_height="@dimen/dimen_40dp"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dimen_5dp"
                        android:padding="@dimen/dimen_10dp"
                        android:visibility="gone"
                        android:scaleType="fitCenter"
                        android:src="@drawable/selector_tools_actionbar_confirm" />

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


